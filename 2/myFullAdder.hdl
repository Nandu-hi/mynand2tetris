/**
 * Computes the sum of three bits.
 */
CHIP myFullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    //// Replace this comment with your code.
    myAnd(a=a,b=b,out=out1);
    myAnd(a=b,b=c,out=out2);
    myAnd(a=a,b=c,out=out3);
    myOr(a=out1,b=out2,out=out4);
    myOr(a=out4,b=out3,out=carry);
    myXor(a=a,b=b,out=xorout1);
    myXor(a=xorout1,b=c,out=sum);
}
