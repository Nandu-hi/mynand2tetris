/**
 * 4-way 16-bit multiplexor:
 * out = a if sel = 00
 *       b if sel = 01
 *       c if sel = 10
 *       d if sel = 11
 */



CHIP myMux4Way {
    IN a, b, c, d,sel[2];
    OUT out;

    PARTS:
    myMux(a=a,b=b,sel=sel[0],out=out1);
    myMux(a=c,b=d,sel=sel[0],out=out2);
    myMux(a=out1,b=out2,sel=sel[1],out=out);
}